{
  "compilerOptions": {
    "pretty": true,
    "lib": [
      "dom",
      "es6",
      "es2015",
      "es2015.promise"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true, 
    "strict": false
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}